<div class="container">
  <div class="row">
    <h2>フォロー一覧</h2>
  </div>

  <div class="row">
  <table>
    <thead>
      <tr>
        <th>ユーザー名</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td class="text-center"><%= link_to user_path(user.id) do %>
        <%= user.name %>
        <% end %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  </div>
</div>