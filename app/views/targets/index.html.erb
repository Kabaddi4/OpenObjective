<div class="container">

  <div class="row">
  目標タイトル検索<%= form_with url: targets_path, method: :get, local: true do |f| %>
    <%= f.text_field :search %>
    <%= f.submit "検索", name: nil %>
  <% end %>
  </div>

  <div class="row my-3 mx-3">
  <h3 class="px-3 text-secondary">目標一覧</h3>
  <% if user_signed_in? %>
    <%= link_to "CreateObject", new_target_path, class: "btn btn-primary" %>
  <% else %>
  <% end %>

  </div>

  <div class="row py-3">
  <table>
    <thead>
      <tr>
        <th class="text-center"><%= sort_order "created_at", "作成日時" %></th>
        <th class="text-center">目標</th>
        <th>作成ユーザー</th>
      </tr>
    </thead>
    <% @targets.each do |target| %>
    <tbody>
    <tr>
      <%#target.user.name%>
      <div class="mx-2 py-3">
        <td class="text-center"><%= target.created_at %></td>
        <td class="text-center"><%= link_to target_path(target.id) do %>
        <%=target.title%><% end %></td>
        <td class="text-center"><%= target.user.name %></td>
      </div>
    </tr>
    </tbody>
    <% end %>
  </table>
  </div>

</div>