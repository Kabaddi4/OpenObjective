<div class="container">
  <div class="row">
  <h3>Object</h3>
  <% if user_signed_in? %>
    <%= link_to "CreateObject", new_target_path %>
  <% else %>
  <% end %>
  </div>

  <div class="row">
  <table>
    <thead>
      <tr>
        <th>目標</th>
        <th class="text-center">作成日時</th>
        <th>作成ユーザー</th>
      </tr>
    </thead>
    <% @targets.each do |target| %>
    <tbody>
    <tr>
      <%#target.user.name%>
      <div class="mx-2 py-3">
        <td><%=target.title%></td>
        <td><%= link_to target_path(target.id) do %>
        <%= target.created_at %><% end %></td>
        <td class="text-center"><%= target.user.name %></td>
      </div>
    </tr>
    </tbody>
    <% end %>
  </table>
  </div>
</div>