<!DOCTYPE html>
<html>
  <head>
    <title>OpenObjective</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="pl-3 my-2">
      <% if user_signed_in? %>
      <div class="row text-border">
        ようこそ、<%= current_user.name %>さん
      </div>
      <div class="row">
        <%= link_to "目標一覧", targets_path %>
        <%= link_to "マイページ", user_path(current_user.id), class: "px-2" %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </div>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path, class: "px-2" %>
        <%= link_to "ログイン", user_session_path %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
